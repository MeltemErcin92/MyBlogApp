@using MyBlog.Data.Model
@model List<Category> 

    <div class="sidebox widget">
        <h3 class="widget-title section-title">Categories</h3>
        <ul class="circled">
            @foreach (Category c in Model)
            {
                <li>
                    <a href="/Article/Detail/@c.CategoryId">
                        @c.CategoryName (@c.Articles.Count)
                    </a>
                </li>
            }

        </ul>
    </div>
