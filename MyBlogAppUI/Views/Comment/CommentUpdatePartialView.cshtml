<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title">Yorum düzenleme</h4>
        </div>
        <form action="/Comment/CommentUpdate/" method="post" class="form-horizontal" role="form">
            <div class="modal-body">
                <div class="scroller" style="height:300px" data-always-visible="1" data-rail-visible1="1">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-body">

                                <div class="form-group">
                                    <label class="col-md-3 control-label">Durum</label>
                                    <label class="col-md-1 control-label">Aktif</label>

                                    <div class="col-md-3">
                                        <input type="radio" class="form-control spinner"
                                               name="isActive" id="IsActiveTrue" value=true>
                                    </div>

                                    <label class="col-md-1 control-label">Pasif</label>
                                    <div class="col-md-3">
                                        <input type="radio" class="form-control spinner"
                                               name="isActive" id="IsActiveFalse" value=false>
                                        <input type="hidden" name="CommentId" id="CommentIdUpdate" value="" />
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn dark btn-outline">Vazgeç</button>
                <button type="submit" class="btn green" id="checkFormUpdate">Güncelle</button>
            </div>
        </form>
    </div>
</div>





