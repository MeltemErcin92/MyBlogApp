
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title">Rol Ekleme</h4>
        </div>
        <form action="/Role/InsertRole/" method="post" class="form-horizontal" role="form">

            <div class="modal-body">
                <div class="scroller" style="height:300px" data-always-visible="1" data-rail-visible1="1">
                    <div class="row">

                            <div class="col-md-12">
                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Adı</label>
                                        <div class="col-md-9" id="nameDiv1">
                                            <input type="text" class="form-control spinner" name="RoleName" id="rolName"  required
                                                   placeholder="Rol adı  giriniz">
                                            <span class="help-block" id="nameError1" style="display:none">Adı alanı boş geçilemez</span>
                                        </div>

                                    </div>


                                </div>
                         
                       </div>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn dark btn-outline">Kapat</button>
                <button type="submit" class="btn green" onclick="checkValidation1()">Kaydet</button>
            </div>
        </form>
    </div>
</div>

<script src="~/Content/Admin/global/plugins/jquery.min.js"></script>
<script>


    function checkValidation1() {

        if ($("#rolName").val() == "") {
            $("#rolName").attr('class', 'col-md-9 has-error');
            $("#nameError1").css('display', 'block');
        }
    }



    $(document).ready(function () {


        $("#rolName").on('input', function () {
            if ($("#rolName").val() != "") {
                $("#nameDiv1").attr('class', 'col-md-9');
                $("#nameError1").css('display', 'none');
            }
            else {
                $("#nameDiv1").attr('class', 'col-md-9 has-error');
                $("#nameError1").css('display', 'block');
            }
        })

    })

</script>

