@using MyBlog.Data.Model
@using MyBlogAppUI.Controllers
@using MyBlogApp.Data
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    var users = RoleController.Service.UserManager.getUsers();
}
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Role Listesi </span>
                </div>

            </div>
            <div class="portlet-body" style="height: 200px;">
                <form action="/UserRole/insertUserRole" method="post" role="form">
                    <div class="form-body">


                        <div class="table-toolbar">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="btn-group">
                                        <button id="sample_editable_1_new"
                                                class="btn sbold green"
                                                data-toggle="modal"
                                                href="#RoleInsertPopUp">
                                            Role Ekle
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                @Html.Partial("RolesPartialView")
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Kulanıcı Adı </label>
                            <div class="col-md-9">
                                <select name="UserId" class="form-control">
                                    @foreach (User u in users)
                                    {
                                        <option value="@u.UserId">
                                            @u.username
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div>
                            <button type="submit" class="btn green" onclick="checkValidation()">Kaydet</button>
                        </div>
                    </div>

                </form>

              
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>


