
@using MyBlogApp.Data.Model
@model IEnumerable<Article>
<div class="sidebox widget">
    <h3 class="widget-title section-title">
        SON YAZILAR
    </h3>
    <ul class="post-list">
        @foreach (Article article in Model)
        {
        <li>
            <div class="icon-overlay">
                <a href="/Article/ArticleDetail/@article.ArticleId">
                    @if (@article.Image != null)
                    {
                        <img src="@article.Image.SmalSize" alt="" />

                    }
                </a>
            </div>



            <div class="meta">
                <h5>
                    <a href="/Article/ArticleDetail/@article.ArticleId">@article.Header</a>
                </h5>
                <em>
                    @article.CreateDate <span class="comments">
                    <a href="#">
                        @article.Comments.Count
                        <i class="icon-chat-1"></i>
                    </a>
                </span>
            </em>
        </div>
        </li>
        }
    </ul>
</div>
